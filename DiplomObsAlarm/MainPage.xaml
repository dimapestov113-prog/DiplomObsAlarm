<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiplomObsAlarm.MainPage">
<!--  кароче тут авто пружинка и авто, * работает как пружинка, она занимает то че дает. авто делает так, чтобы занимало столько сколько нужно-->
    <Grid RowDefinitions="Auto, *, Auto">
        <VerticalStackLayout 
            Grid.Row="0"
            Margin="20"
            Spacing="20">
            <!--logo-->
            <Image 
                Source="logo.png"
                HeightRequest="41"
                HorizontalOptions="Start" />
            <!--role-->
            <Label 
                Text="Выберите вашу роль"
                HorizontalOptions="Center"
                FontSize="18"
                FontAttributes="Bold" />
            <!--Button-->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                <!--admin-->
                <Border
                    Stroke="Black"
                    Background="Black"
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="Center">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="60"/>
                    </Border.StrokeShape>
                    <ImageButton
                        Clicked="OnAdminClicked"
                        Source="admin.png"
                        WidthRequest="70"
                        HeightRequest="70"/>
                </Border>

                <!--user-->
                <Border 
                    Stroke="Black"
                    Background="Black"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalOptions="Center">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="60"/>
                    </Border.StrokeShape>
                    <ImageButton
                        Clicked="OnUserClicked"
                        Source="user.png"
                        WidthRequest="70"
                        HeightRequest="70"/>
                </Border>

                <!--text-->
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Админ"
                    HorizontalOptions="Center" />

                <Label 
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="Пользователь"
                    HorizontalOptions="Center" />
            </Grid>

            <!--info-->
            <Label
                Text="Админ - отправляет уведомления о различных угрозах, а пользователь получает их."
                FontSize="16"
                HorizontalTextAlignment="Start" />

            <Label
                Text="Пользователь - Получает уведомления."
                FontSize="16"
                HorizontalTextAlignment="Start" />
        </VerticalStackLayout>
        <!--nicego-->
        <!--row 1 == pusto >>> pruzjinka-->
        <!-- futer >>> snizu prizjat -->
        <Label
            Grid.Row="2"
            Text="Приложение создано в целях безопасности студентов и работников, проживающих и работающих в общежитии, для сообщения о различных угрозах, тем кто находится в общежитии и за её пределами, для большей безопасности."
            FontSize="10"
            Margin="20"
            HorizontalTextAlignment="Center"
            VerticalOptions="End" />

    </Grid>
</ContentPage>